{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 14,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default build using Ninja, in cmake_build",
            "description": "Default build using Ninja generator",
            "generator": "Ninja",
            "binaryDir": "${sourceParentDir}/cmake_build/build_${sourceDirName}/${presetName}",
            "cacheVariables": {
                "PRESET_NAME": "${presetName}"
            }
        },
        {
            "name": "_d_ccache_OFF",
            "hidden": true,
            "cacheVariables": {
                "DISABLE_CCACHE": {
                    "type": "BOOL",
                    "value": true
                }
            }
        },
        {
            "name": "_d_sccache_ON",
            "hidden": true,
            "inherits": [
                "_d_ccache_OFF"
            ],
            "cacheVariables": {
                "ENABLE_SCCACHE": {
                    "type": "BOOL",
                    "value": true
                }
            }
        },
        {
            "name": "_integration_",
            "hidden": true,
            "inherits": [
                "default"
            ],
            "cacheVariables": {
                "INTEGRATION_BUILD": {
                    "type": "BOOL",
                    "value": true
                }
            }
        },
        {
            "name": "_daily_",
            "hidden": true,
            "inherits": [
                "_integration_"
            ],
            "cacheVariables": {
                "DAILY_BUILD": {
                    "type": "BOOL",
                    "value": true
                }
            }
        },
        {
            "name": "_ci_",
            "hidden": true,
            "inherits": [
                "_integration_"
            ],
            "cacheVariables": {
                "CI_BUILD": {
                    "type": "BOOL",
                    "value": true
                }
            }
        },
        {
            "name": "ci_all",
            "inherits": [
                "default"
            ],
            "displayName": "CI cmake build"
        },
        {
            "name": "ci_all_sccache",
            "inherits": [
                "_d_sccache_ON",
                "ci_all"
            ],
            "displayName": "CI cmake build with sccache for k8s"
        },
        {
            "name": "daily_all",
            "inherits": [
                "default"
            ],
            "displayName": "daily cmake build"
        },
        {
            "name": "daily_all_sccache",
            "inherits": [
                "_d_sccache_ON",
                "daily_all"
            ],
            "displayName": "daily cmake build with sccache for k8s"
        }
    ],
    "buildPresets": [
        {
            "name": "package_all",
            "configurePreset": "default",
            "targets": [
                "package_all"
            ],
            "vendor": {
                "submit": true
            }
        },
        {
            "name": "blank",
            "configurePreset": "default",
            "targets": [
                ""
            ]
        }
    ]
}
